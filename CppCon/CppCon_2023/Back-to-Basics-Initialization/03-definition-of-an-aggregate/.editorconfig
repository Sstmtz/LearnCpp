# This file configures editors using the EditorConfig
# scheme: https://editorconfig.org

# top-most EditorConfig file
root = true

# [neocmakelsp] https://github.com/neocmakelsp/neocmakelsp#format-cli
[CMakeLists.txt]
indent_style = space
indent_size = 4
max_line_length = 80

[*.{cmake}]
indent_style = space
indent_size = 4

[*.{lua}]
indent_style = space
indent_size = 4

[*.md]
max_line_length = 80
